# Supabase + Render Environment Configuration
# Copy these to your Render environment variables

# Application
APP_NAME="DMCRS"
APP_ENV=production
APP_KEY=your_laravel_app_key_here
APP_DEBUG=false
APP_URL=https://your-app-name.onrender.com

# Supabase Database Configuration
DB_CONNECTION=pgsql
DB_HOST=db.xxxxx.supabase.co
DB_PORT=5432
DB_DATABASE=postgres
DB_USERNAME=postgres
DB_PASSWORD=your_supabase_password

# Cache & Session (use database for simplicity)
CACHE_DRIVER=database
SESSION_DRIVER=database
QUEUE_CONNECTION=database

# Mail Configuration (use your existing mail settings)
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=your_email@gmail.com
MAIL_FROM_NAME="${APP_NAME}"

# File Storage (use public disk for simplicity)
FILESYSTEM_DISK=public

# Optional: Supabase additional features
SUPABASE_URL=https://xxxxx.supabase.co
SUPABASE_KEY=your_supabase_anon_key